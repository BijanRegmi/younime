// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
    // Next Auth
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model User {
    // Next Auth
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]

    // User data
    password String?
    history  history[]
}

model history {
    userId               String @id
    lastWatchedEpisodeId Int

    // Playlist stuffs
    watching    anime[] @relation("watching")
    completed   anime[] @relation("completed")
    hold        anime[] @relation("hold")
    considering anime[] @relation("considering")
    dropped     anime[] @relation("dropped")
    recommended anime[] @relation("recommended")

    // Comments stuffs
    comments         comment[] @relation("commented")
    likedComments    comment[] @relation("likedComments")
    dislikedComments comment[] @relation("dislikedComments")

    user          User    @relation(fields: [userId], references: [id])
    lastWatchedEp episode @relation("lastWatched", fields: [lastWatchedEpisodeId], references: [id])
}

model anime {
    id         Int     @id
    title      String
    alttitle   String?
    score      Float   @default(0.0)
    age_rating String?
    studio     String?
    season     String?
    type       String?
    thumbnail  String?
    synopsis   String?

    genres   genre[]
    episodes episode[]
    mapping  mapping[]

    watching_history    history[] @relation("watching")
    completed_history   history[] @relation("completed")
    hold_history        history[] @relation("hold")
    considering_history history[] @relation("considering")
    dropped_history     history[] @relation("dropped")
    recommended_history history[] @relation("recommended")
}

model comment {
    id          Int      @id @default(autoincrement())
    content     String
    spoiler     Boolean? @default(false)
    episodeId   Int
    commenterId String

    likers    history[] @relation("likedComments")
    dislikers history[] @relation("dislikedComments")

    commenter history @relation("commented", fields: [commenterId], references: [userId])
    episode   episode @relation(fields: [episodeId], references: [id])
}

model episode {
    id       Int     @id @default(autoincrement())
    file_url String? @unique
    name     String?
    animeId  Int

    comments comment[]
    history  history[] @relation("lastWatched")

    anime anime @relation(fields: [animeId], references: [id])
}

model genre {
    name  String  @id
    anime anime[]
}

model mapping {
    id      Int   @id
    mal     anime @relation(fields: [animeId], references: [id])
    animeId Int

    @@unique([id, animeId])
}
